{
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['before 9am on Saturday'],
  packageRules: [
    {
      matchManagers: ['npm'],
      enabled: false,
      rangeStrategy: 'bump',
    },
    {
      matchManagers: ['npm'],
      matchUpdateTypes: ['minor', 'patch'],
      matchCurrentVersion: '!/^0/',
      enabled: true,
      automerge: true,
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
  ],
}
